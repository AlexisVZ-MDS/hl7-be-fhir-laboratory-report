								<td>to do</td>
								<td>to do</td>
							</tr>
						</table>
						<p>
							<b>Coded Diagnoses :</b>
						</p>
					</div>
				</text>
				<identifier>
					<system value="http://acme.com/lab/reports"/>
					<value value="11530231003.2015110413180000000"/>
				</identifier>
				<basedOn>
					<reference value="ServiceRequest/servicerequest1"/>
				</basedOn>
				<status value="final"/>
				<category>
					<coding>
						<system value="http://terminology.hl7.org/CodeSystem/v2-0074"/>
						<code value="LAB"/>
